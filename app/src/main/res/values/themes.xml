<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WendyGrocery" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WendyGrocery.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WendyGrocery.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WendyGrocery.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--===========================================================-->
    <!-- Font                                                      -->
    <!--===========================================================-->

    <style name="Fonts">
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="Fonts.HeadlineMedium" parent="Fonts">
        <item name="android:fontFamily">@font/commissioner_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">24dp</item>
    </style>

    <style name="Fonts.Title2SemiBold" parent="Fonts">
        <item name="android:fontFamily">@font/commissioner_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24dp</item>
    </style>

    <style name="Fonts.Caption1Regular" parent="Fonts">
        <item name="android:fontFamily">@font/commissioner_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16dp</item>
    </style>

    <style name="Fonts.Body2Medium" parent="Fonts">
        <item name="android:fontFamily">@font/commissioner_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:lineSpacingExtra">16dp</item>
    </style>
    <style name="font">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="h1" parent="font">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="h2" parent="font">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="body1" parent="font">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="body2" parent="font">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="body3" parent="font">
        <item name="android:textSize">18sp</item>
    </style>

</resources>