<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_amount_minus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/spacing_xtiny"
        android:paddingStart="@dimen/spacing_xtiny"
        android:paddingEnd="@dimen/spacing_xtiny"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/product_amount_text"
        >
        <ImageView
            android:id="@+id/image_amount_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/ic_remove"
            android:layout_marginEnd="@dimen/spacing_tiny"
            android:padding="4dp"
            android:background="@drawable/bg_action_amount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/product_amount_text"
        style="@style/Fonts.Body2Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="number"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/layout_amount_add"
        tools:text="10"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_amount_add"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/spacing_xtiny"
        android:paddingStart="@dimen/spacing_xtiny"
        android:paddingEnd="@dimen/spacing_xtiny"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
    <ImageView
        android:id="@+id/product_amount_add"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_add"
        android:layout_marginStart="@dimen/spacing_tiny"
        android:padding="4dp"
        android:background="@drawable/bg_action_amount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>